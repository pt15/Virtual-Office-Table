<script>
var countid=1;
var countproj=1;

function addid(){
	
	if(countid!=5)
//var c=document.getElementById("emailids");
	{
		
		countid++;
		var div = document.createElement('div');
		div.innerHTML = "Email ID-" + countid + "<span class=required>*</span>: <input type='text' name='EmailID" + countid + "' required> Password<span class=required>*</span>: <input type='password' name='Password" + countid + "' required>";
		document.getElementById("emailids").appendChild(div);
	}
	else
	{
		document.getElementById("Error").innerHTML = "Cannot add more than 5 Email-IDs!";
	}
}

function addproject(){
	//alert("IN");
	
	if(countproj!=3)
//var c=document.getElementById("emailids");
	{
		//alert(countproj);
		countproj++;
		var div2 = document.createElement('div');
		div2.innerHTML = "Project "+ countproj + ": <input type='text' name='Project"  + countproj + "'>";
		document.getElementById("Projects").appendChild(div2);
	}
	else
	{
		document.getElementById("Error2").innerHTML = "Cannot add more than 3 projects!";
	}
}



